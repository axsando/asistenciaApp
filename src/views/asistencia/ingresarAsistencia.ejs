<!DOCTYPE html>
<html lang="es">
<head>
  <%- include('../partials/head') %>
  <title>Registrar Asistencia</title>
  <style>
    .card {
      border-radius: 1rem;
    }
    .form-label {
      font-weight: 500;
    }
    .btn-custom {
      background-color: #198754;
      color: #fff;
      font-weight: 500;
      border: none;
      border-radius: 0.375rem;
      padding: 0.5rem 1rem;
      font-size: 1rem;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 0.5rem;
      transition: background-color 0.3s ease;
    }
    .btn-custom:hover {
      background-color: #157347;
    }
    .btn-custom i {
      font-size: 1.2rem;
    }
  </style>
</head>

<%- include('../partials/header') %>
<body class="d-flex flex-column min-vh-100">
  <main class="flex-grow-1 d-flex align-items-center justify-content-center text-center text-white">
  <div class="container d-flex justify-content-center align-items-center min-vh-80">
    <div class="card shadow p-4 rounded-4" style="width: 100%; max-width: 500px;">
      <h3 class="text-center mb-4">üìù Registrar Asistencia</h3>
      <form id="asistenciaForm">
        <input type="hidden" name="userId" value="<%= userId %>">
        <div class="mb-3">
          <label for="tipo" class="form-label">Tipo de asistencia</label>
          <select class="form-select" id="tipo" name="tipo" required>
            <option value="">Selecciona una opci√≥n</option>
            <option value="entrada">Entrada</option>
            <option value="salida">Salida</option>
            <option value="salida_colacion">Salida a colaci√≥n</option>
            <option value="entrada_colacion">Entrada de colaci√≥n</option>
          </select>
        </div>
        <button type="submit" class="btn btn-custom w-100">
          <i class="bi bi-check-circle"></i>
          Registrar
        </button>
      </form>
    </div>
  </div>
</main>

  <script>
    document.getElementById("asistenciaForm").addEventListener("submit", async (event) => {
        event.preventDefault();
        const tipo = document.getElementById("tipo").value;
        const userId = document.querySelector('input[name="userId"]').value;
        const response = await fetch("/asistencia/crear", {
            method: "POST",
            headers: {
                "Content-Type": "application/json",
            },
            body: JSON.stringify({userId, tipo}),
        });
        const result = await response.json();
        if (result.success) {
            alert(result.message);
            document.getElementById("tipo").value="";
        } else {
            /* alert("Error al ingresar los datos."); */
            alert("‚ùå " + result.message);
        }
    })
  </script>

  <footer>
    <%- include('../partials/footer') %>
    <%- include('../partials/scripts') %>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
  </footer>
</body>
</html>
